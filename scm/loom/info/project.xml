<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <name>Loom MetaClass Extensions</name>
    <id>loom-info</id>
    <package>org.jcontainer.loom.info</package>

    <shortDescription>Tools to generating Loom Type MetaData.</shortDescription>
    <description>
        This is a toolkit for generating Loom Type MetaData.
    </description>

    <dependencies>
        <dependency>
            <groupId>dna</groupId>
            <artifactId>dna-api</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>dna</groupId>
            <artifactId>dna-tools</artifactId>
            <version>20031016.083103</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-metaclass</artifactId>
            <version>20031016.074122</version>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>20030713</version>
        </dependency>
        <dependency>
            <id>qdox</id>
            <version>1.1</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.xinfo</include>
                        <include>**/*.java</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
        <report>maven-license-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-simian-plugin</report>
    </reports>

</project>
