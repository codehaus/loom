    <build>
        <sourceDirectory>${maven.aggregated.src}/java</sourceDirectory>
        <resources>
            <resource>
                <directory>${maven.aggregated.src}/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>

        <unitTestSourceDirectory>${maven.aggregated.src}/test</unitTestSourceDirectory>
        <unitTest>
            <resource>
                <directory>${maven.aggregated.src}/test</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                    <include>**/*.xinfo</include>
                </includes>
            </resource>

            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
        <nagEmailAddress>jcontainer-interest@lists.codehaus.org</nagEmailAddress>
    </build>

    <reports>
        <report>maven-jdepend-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
        <report>maven-license-plugin</report>
    </reports>
</project>
