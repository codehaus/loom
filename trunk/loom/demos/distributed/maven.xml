<project default="main"
    xmlns:j="jelly:core"
    xmlns:maven="jelly:maven">

    <goal name="main">
        <attainGoal name="build"/>
    </goal>

    <goal name="clean">
         <echo message="Cleaning all components"/>
         <maven:reactor
            basedir="${basedir}"
            includes="*/project.xml"
            goals="clean:clean"
            banner="Cleaning"
            ignoreFailures="false"/>
    </goal>

    <goal name="build">
        <echo message="Building all components"/>
        <maven:reactor
            basedir="${basedir}"
            includes="*/project.xml"
            goals="clean:clean,main"
            banner="Building"
            ignoreFailures="false" />

    </goal>

    <goal name="deploy">
        <echo message="Deploying all components"/>
        <maven:reactor
            basedir="${basedir}"
            includes="*/project.xml"
            goals="clean:clean,deploy"
            banner="Deploying"
            ignoreFailures="false" />
    </goal>

</project>