<?xml version="1.0"?>
<!DOCTYPE assembly PUBLIC "-//LOOM/Assembly DTD Version 1.0//EN"
                  "http://loom.jcontainer.org/dtds/assembly_1_0.dtd">

<assembly>

    <block class="org.codehaus.spice.threadpool.impl.AvalonCommonsThreadPool"
        name="thread-pool"/>

    <!-- The Connection Manager block -->
    <block class="org.codehaus.spice.netserve.connection.impl.AvalonConnectionManager"
        name="connections">
        <provide name="thread-pool"
            role="org.codehaus.spice.threadpool.ThreadPool"/>
    </block>

    <!-- The Socket Manager block -->
    <block class="org.codehaus.spice.netserve.sockets.impl.DefaultServerSocketFactory" name="sockets"/>

    <!-- The RMIfication block -->
    <block class="org.apache.avalon.cornerstone.blocks.rmification.DefaultRMIfication"
        name="rmification"/>

    <!--                                        -->
    <!-- Below this section are the demo blocks -->
    <!--                                        -->
    <block class="org.jcontainer.loom.demos.helloworld.HelloWorldServerImpl"
        name="helloworldserver">
        <provide name="sockets"
            role="org.codehaus.spice.netserve.sockets.ServerSocketFactory"/>
        <provide name="connections"
            role="org.codehaus.spice.netserve.connection.ConnectionManager"/>
    </block>

</assembly>
