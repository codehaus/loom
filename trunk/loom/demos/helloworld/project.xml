<?xml version="1.0"?>
<project>
    <extend>${basedir}/../../project.xml</extend>
    <name>Loom HelloWorld Demo</name>
    <id>demo-helloworld</id>
    <package>org.jcontainer.loom.demos.helloworld</package>
    <shortDescription>HelloWorld Demo</shortDescription>
    <description>
        HelloWorld Demo app for deployment in Loom Application Server.
    </description>

    <dependencies>
        <dependency>
            <groupId>loom</groupId>
            <artifactId>maven-sar-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>4.1.4</version>
        </dependency>
        <dependency>
            <groupId>phoenix</groupId>
            <artifactId>phoenix-client</artifactId>
            <version>4.0.4</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-netserve</artifactId>
            <version>1.0-b1</version>
            <properties>
                <sar.bundle>true</sar.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-threadpool</artifactId>
            <version>1.0-b1</version>
            <properties>
                <sar.bundle>true</sar.bundle>
            </properties>
        </dependency>
        <dependency> <!-- for spice-threadpool -->
            <id>commons-pool</id>
            <version>20030623.172700</version>
            <properties>
                <sar.bundle>true</sar.bundle>
            </properties>
        </dependency>
        <dependency><!-- for commons-pool -->
            <id>commons-collections</id>
            <version>2.0</version>
            <properties>
                <sar.bundle>true</sar.bundle>
            </properties>
        </dependency>
    </dependencies>

</project>
