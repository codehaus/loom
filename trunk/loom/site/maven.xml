        	<fileset dir="${basedir}/../tools/src/java/org/jcontainer/loom/tools">
	          	<include name="*.dtd"/>
        	</fileset>
      	</copy>
	</postGoal>
	
    <goal name="deploy">
        <attainGoal name="site:deploy"/>    	
    </goal>

</project>
