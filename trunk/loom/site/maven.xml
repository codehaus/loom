<?xml version="1.0"?>
<project default="main">

    <goal name="main">
        <attainGoal name="build"/>
    </goal>
    
    <goal name="build">
        <attainGoal name="site:generate"/>    	
    </goal>

	<postGoal name="xdoc:copy-user-resources">
