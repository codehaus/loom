<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <name>Loom Site</name>
    <id>loom-site</id>
    <shortDescription>JContainer Loom web site</shortDescription>
    <description>JContainer Loom web site</description>
    <package>org.jcontainer.loom</package>

    <dependencies>
  	  <dependency>
    	 <groupId>commons-jelly</groupId>
    	 <artifactId>commons-jelly-tags-velocity</artifactId>
      	 <version>20030303.205659</version>
      </dependency>
	  <dependency>
    	 <id>velocity</id>
    	 <version>1.3</version>
   	  </dependency>
	</dependencies>

    <build>
        <!-- Only used if aggregating components by source -->
        <sourceDirectory>target/aggregated-src/java</sourceDirectory>
        <unitTestSourceDirectory>target/aggregated-src/test</unitTestSourceDirectory>

        <unitTest>
            <resource>
                <directory>target/aggregated-src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
        <nagEmailAddress>jcontainer-interest@lists.codehaus.org</nagEmailAddress>
    </build>

    <reports>
        <report>maven-javadoc-plugin</report>
        <report>maven-license-plugin</report>
    </reports>
</project>
