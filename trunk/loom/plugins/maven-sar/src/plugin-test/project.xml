<?xml version="1.0" encoding="UTF-8"?>

<project>
    <id>test-maven-sar-plugin</id>
    <currentVersion>test</currentVersion>
    <name>Test project for Maven Sar Plugin</name>

    <dependencies>
        <dependency>
            <groupId>loom</groupId>
            <artifactId>maven-sar-plugin</artifactId>
            <version>1.0-beta1-dev</version>
            <type>plugin</type>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5.1</version>
            <properties>
                <sar.bundle>true</sar.bundle>
            </properties>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
        </unitTest>

    </build>

</project>
