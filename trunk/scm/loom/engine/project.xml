<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Loom Engine</name>
    <id>loom-engine</id>
    <currentVersion>1.0dev</currentVersion>
    <inceptionYear>1999-2003</inceptionYear>
    <package>org.jcontainer.loom</package>

    <shortDescription>Main Engine for hosting components.</shortDescription>

    <description>
        The core of the Loom Application Server.
    </description>

    <dependencies>
        <dependency>
            <groupId>jcomponent</groupId>
            <artifactId>jcomponent-loggerstore</artifactId>
            <version>1.0-b1</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-classman</artifactId>
            <version>20030818.014108</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-cli</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-configkit</artifactId>
            <version>1.1.2</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-xmlpolicy</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-salt</artifactId>
            <version>0.8dev</version>
        </dependency>
        <dependency>
            <groupId>loom</groupId>
            <artifactId>loom-tools</artifactId>
            <version>1.0dev</version>
        </dependency>
        <dependency>
            <groupId>mx4j</groupId>
            <artifactId>mx4j-jmx</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>mx4j</groupId>
            <artifactId>mx4j-tools</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <id>excalibur-instrument-manager-interfaces</id>
            <version>0.1</version>
        </dependency>
        <dependency>
            <id>excalibur-monitor</id>
            <version>20030713</version>
        </dependency>
        <dependency>
            <id>excalibur-instrument</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>excalibur-instrument-manager</id>
            <version>0.1</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-extension</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-logkit</artifactId>
            <version>20030527</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>20030713</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-phoenix-client</artifactId>
            <version>20030819</version>
        </dependency>
        <dependency>
            <id>oro</id>
            <version>2.0.7</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>isorelax</id>
            <version>20020414</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>msv</id>
            <version>20020414</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>xsdlib</id>
            <version>20030225</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>relaxngDatatype</id>
            <version>20020414</version>
        </dependency>
        <dependency> <!-- for unit testing -->
            <groupId>excalibur</groupId>
            <artifactId>excalibur-logger</artifactId>
            <version>20030713</version>
        </dependency>
        <dependency><!-- for unit testing -->
            <groupId>avalon</groupId>
            <artifactId>avalon-logkit</artifactId>
            <version>20030527</version>
        </dependency>
        <dependency><!-- for unit testing -->
            <groupId>excalibur</groupId>
            <artifactId>excalibur-i18n</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.xinfo</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

</project>
