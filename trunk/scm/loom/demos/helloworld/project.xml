<?xml version="1.0"?>
<project>
    <pomVersion>3</pomVersion>
    <name>Loom HelloWorld Demo</name>
    <groupId>loom</groupId>
    <artifactId>demo-helloworld</artifactId>
    <currentVersion>1.0dev</currentVersion>
    <inceptionYear>1999-2003</inceptionYear>
    <package>org.jcontainer.loom.demos.helloworld</package>

    <shortDescription>HelloWorld Demo</shortDescription>

    <description>
        HelloWorld Demo app for deployment in Loom Application Server.
    </description>

    <dependencies>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-logkit</artifactId>
            <version>20030527</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>20030713</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-cornerstone</artifactId>
            <version>20030801</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
        <dependency>
        	<groupId>loom</groupId>
            <artifactId>phoenix-client</artifactId>
            <version>1.0dev</version>
        </dependency>
        <dependency>
        	<groupId>loom</groupId>
            <artifactId>loom-tools</artifactId>
            <version>1.0dev</version>
        </dependency>
        <dependency>
            <groupId>mx4j</groupId>
            <artifactId>mx4j-jmx</artifactId>
            <version>1.1</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
        <dependency>
            <groupId>mx4j</groupId>
            <artifactId>mx4j-tools</artifactId>
            <version>1.1</version>
            <properties>
                <category>container</category>
            </properties>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.xinfo</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

</project>
