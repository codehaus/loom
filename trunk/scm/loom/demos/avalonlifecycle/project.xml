<?xml version="1.0"?>
<project>
    <extend>${basedir}/../../project.xml</extend>
    <name>Loom Avalon Lifecycle Demo</name>
    <id>demo-avalonlifecycle</id>
    <package>org.jcontainer.loom.demos.avalonlifecycle</package>
    <shortDescription>Avalon Lifecycle Demo</shortDescription>
    <description>
        Avalon Lifecycle Demo app for deployment in Loom Application Server.
    </description>

    <dependencies>
        <dependency>
            <groupId>loom</groupId>
            <artifactId>maven-sar-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>20030713</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-cornerstone</artifactId>
            <version>20030801</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-phoenix-client</artifactId>
            <version>20030819</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.xinfo</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

</project>
