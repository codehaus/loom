<project default="main"
    xmlns:ant="jelly:ant">

    <goal name="main">
        <attainGoal name="build"/>
    </goal>

    <goal name="build">
        <attainGoal name="jar:jar"/>
        <attainGoal name="loom:sar"/>
        <ant:copy todir="${basedir}/../../../distribution/deploy/apps"
            overwrite="true">
            <ant:fileset dir="${maven.build.dir}">
                <ant:include name="*.sar"/>
            </ant:fileset>
        </ant:copy>
    </goal>

    <goal name="deploy">
        <attainGoal name="loom:deploy"/>
    </goal>

    <postGoal name="java:compile">
        <attainGoal name="loom:metagenerate"/>
    </postGoal>

</project>
