<project default="main"
    xmlns:ant="jelly:ant">

    <goal name="main">
        <attainGoal name="build"/>
    </goal>

    <goal name="build">
        <attainGoal name="jar:jar"/>
        <attainGoal name="sar:sar"/>
        <ant:copy file="target/${maven.sar.final.name}"
            todir="${basedir}/../../../distribution/deploy/apps"
            overwrite="true"/>
    </goal>

    <goal name="deploy">
        <attainGoal name="sar:deploy"/>
    </goal>

</project>
