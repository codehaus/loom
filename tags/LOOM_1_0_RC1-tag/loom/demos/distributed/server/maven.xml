<project default="main"
    xmlns:ant="jelly:ant">

    <goal name="build" prereqs="loom:sar">
        <ant:copy todir="${basedir}/../../../distribution/deploy/apps"
            overwrite="true">
            <ant:fileset dir="${maven.build.dir}">
                <ant:include name="*.sar"/>
            </ant:fileset>
        </ant:copy>
    </goal>

    <goal name="deploy" prereqs="loom:deploy"/>

</project>
