<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <name>Loom Plugins</name>
    <currentVersion>1.0-beta1-dev</currentVersion>
    <groupId>loom</groupId>

    <distributionDirectory>/www/dist.codehaus.org</distributionDirectory>
    <distributionSite>codehaus.org</distributionSite>
    <siteDirectory>/www/jcontainer.codehaus.org/loom/plugins</siteDirectory>
    <siteAddress>loom.jcontainer.org</siteAddress>

    <build>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/plugin-resources</directory>
                <targetPath>plugin-resources</targetPath>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.jelly</include>
                    <include>plugin.properties</include>
                    <include>project.properties</include>
                    <include>project.xml</include>
                </includes>
            </resource>
        </resources>

    </build>

</project>

