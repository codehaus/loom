<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <name>Loom Tools</name>
    <id>loom-tools</id>
    <package>org.jcontainer.loom.tools</package>
    <shortDescription>Tools to for Loom Component Writers.</shortDescription>
    <description>
        This is a toolkit for Loom Component writers that aids
        in developing and maintaining Loom components.
    </description>

    <dependencies>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-metaclass</artifactId>
            <version>20031005.002435</version>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>avalon</groupId>
            <artifactId>avalon-framework</artifactId>
            <version>20030713</version>
        </dependency>
        <dependency>
        	<groupId>avalon</groupId>
            <artifactId>avalon-phoenix-client</artifactId>
            <version>20030819</version>
        </dependency>
        <dependency>
            <id>excalibur-instrument</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>excalibur-instrument-manager-interfaces</id>
            <version>0.1</version>
        </dependency>
        <dependency>
            <id>qdox</id>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>spice</groupId>
            <artifactId>spice-salt</artifactId>
            <version>0.8dev</version>
        </dependency>
        <dependency> <!-- for unit testing the schema validation -->
            <groupId>spice</groupId>
            <artifactId>spice-configkit</artifactId>
            <version>1.1.2</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>isorelax</id>
            <version>20020414</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>msv</id>
            <version>20020414</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>xsdlib</id>
            <version>20030225</version>
        </dependency>
        <dependency><!-- for spice-configkit -->
            <id>relaxngDatatype</id>
            <version>20020414</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
	        <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.xinfo</include>
                        <include>**/*.java</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

</project>
