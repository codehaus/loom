<project default="main"
    xmlns:maven="jelly:maven">

  <goal name="main">
    <attainGoal name="build"/>
  </goal>

  <goal name="clean-all">
    <maven:maven
        descriptor="${basedir}/plugins/project.xml"
        goals="clean-all"
        ignoreFailures="false"/>
    <attainGoal name="clean"/>
  </goal>

  <goal name="build">
    <maven:maven
        descriptor="${basedir}/plugins/project.xml"
        goals="build"
        ignoreFailures="false"/>
    <attainGoal name="jar:install"/>       
  </goal>

  <goal name="deploy">
    <maven:maven
        descriptor="${basedir}/plugins/project.xml"
        goals="deploy"
        ignoreFailures="false"/>
    <attainGoal name="jar:deploy"/>       
  </goal>

</project>
